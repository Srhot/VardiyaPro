          "const token = pm.collectionVariables.get('token');",
          "",
          "// Check if token exists (skip for login endpoint)",
          "if (!token && !pm.request.url.path.includes('login')) {",
          "    console.warn('âš ï¸ No token found. Please login first.');",
          "}",
          "",
          "// Log request details",
          "console.log('ðŸš€ Request:', pm.request.method, pm.request.url.path.join('/'));",
